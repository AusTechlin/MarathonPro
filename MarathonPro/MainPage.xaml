<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="MarathonPro"
             x:Class="MarathonPro.MainPage">

    <StackLayout Padding="20,20">
        <Label Text="Race Results" FontSize="Large" FontAttributes="Bold"/>
        <ListView x:Name="ResultListView" />
        <Picker x:Name="RacePicker" ItemDisplayBinding="{Binding race_name}" 
                Title="Please Pick a Race" FontSize="Medium" HorizontalTextAlignment="Center" 
                BackgroundColor="Blue" TextColor="White" SelectedIndexChanged="RacePicker_OnSelectedIndexChanged" />
    </StackLayout>

</ContentPage>
